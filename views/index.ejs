      <div class="container-buttons">
        

        <% data.forEach((elem,i) => {%>
          
        
         
          <div class="select-button" data-pk="<%= i %>"href="#">
            <div style="justify-content: center;display: grid;">
            <p style="color: #24355a;"><%= elem.Name %></p>
            
            <img src="images/cup.png" style="width: 67px;">
          </div>
          </div>
        
        



      
          <% }) %>

      </div>

      <div class="container-questions">
        <div id="money">
          <img  src="images/hand.png" style="width: 40px;" alt="Flowers in Chania"> 
  
            <p>></p>
          </div>
        <div id="text"class="field-wrap">
          <img style="width: 30px; position: relative; top: 31px;"src="images/seta.png" alt="" >
          <input type="text" id="answer" name="" value="">
          


        </div>
        <div id="drop"class="field-wrap ">
